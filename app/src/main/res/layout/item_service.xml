<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/re_layout"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/wallet_service_list_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/demo" />

        <TextView
            android:id="@+id/channel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:textColor="@color/pay_recharge_text_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/channel_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/channel_name"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:textColor="@color/pay_recharge_bottom_tel_text_color"
            android:textSize="10sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/special_offer_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@null"
        android:scaleType="centerCrop" />

    <View
        android:id="@+id/pay_right_dividing_line"
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:background="@color/pay_actionbar_color"
        android:contentDescription="@null" />
</RelativeLayout>